{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "checkJs": true,
  },
  "include": ["src/**/*", "costum.d.ts"],
  "exclude": ["node_modules", "dist", "**/webidl-conversions.d.ts"]
}
